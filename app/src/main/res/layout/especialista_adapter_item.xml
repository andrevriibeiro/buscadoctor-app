<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="@dimen/normal_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_margin">

        <ImageView
            android:id="@+id/image_view_especialista_foto"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image"
            android:src="@mipmap/ic_doutor" />

        <TextView
            android:id="@+id/text_view_especialista_nome"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_toRightOf="@+id/image_view_especialista_foto"
            android:text="Dra. Claudia Maria Machado"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_especialista_consultorio"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_especialista_nome"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/text_view_especialista_nome"
            android:layout_below="@+id/text_view_especialista_especialidade"
            android:layout_marginTop="@dimen/normal_margin"
            android:text="Ouroclinica"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_clinica_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_especialista_nome"
            android:layout_alignStart="@+id/text_view_especialista_nome"
            android:layout_below="@+id/text_view_especialista_consultorio" />

        <TextView
            android:id="@+id/text_view_especialista_especialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_especialista_nome"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/text_view_especialista_nome"
            android:layout_below="@+id/text_view_especialista_nome"
            android:text="Clinico Geral" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
