<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/normal_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_view_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignTop="@+id/text_view_nome_clinica_especialista" />

        <TextView
            android:id="@+id/text_view_nome_clinica_especialista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Dra. Claudia Emi Regis"
            android:textColor="#212121"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_tipo_clinic_especialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_nome_clinica_especialista"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="ClÃ­nico Geral"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_view_clinic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ouroclinica"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_below="@+id/text_view_tipo_clinic_especialidade"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/image_view_card"
            android:layout_toEndOf="@+id/image_view_card" />

        <TextView
            android:id="@+id/text_view_cidade_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campinas - SP"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/image_view_card"
            android:layout_toEndOf="@+id/image_view_card" />

    </RelativeLayout>
</android.support.v7.widget.CardView>