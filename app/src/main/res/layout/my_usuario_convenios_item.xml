<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/normal_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="false"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_convenio_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/text_view_nome_convenio"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_cpf" />

        <TextView
            android:id="@+id/text_view_nome_convenio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_convenio_number"
            android:layout_alignStart="@+id/text_view_convenio_number"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/image_edit_card"
            android:layout_toStartOf="@+id/image_edit_card"
            android:text="SulAmerica"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="12dp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/text_view_convenio_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_nome_convenio"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/image_convenio_card"
            android:layout_toRightOf="@+id/image_convenio_card"
            android:textSize="10dp"
            android:text="494394394"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272" />

        <ImageView
            android:id="@+id/image_edit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_remover_card"
            android:layout_alignTop="@+id/text_view_nome_convenio"
            android:layout_toLeftOf="@+id/image_remover_card"
            android:clickable="true"
            android:layout_toStartOf="@+id/image_remover_card"
            android:src="@mipmap/ic_edit" />

        <ImageView
            android:id="@+id/image_remover_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_view_convenio_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_alignTop="@+id/text_view_nome_convenio"
            android:src="@mipmap/ic_remove" />
    </RelativeLayout>
</android.support.v7.widget.CardView>