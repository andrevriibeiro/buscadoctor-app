<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_coments1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_separate_forth"
        android:layout_marginTop="@dimen/normal_margin">

        <ImageView
            android:id="@+id/image_paciente1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_profile" />

        <TextView
            android:id="@+id/txt_view_nome_paciente1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_paciente1"
            android:text="AndrÃ© Vitor Faria Ribeiro"
            android:textSize="@dimen/half_text_size" />

        <RatingBar
            android:id="@+id/rb_paciente1"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_view_nome_paciente1"
            android:layout_toRightOf="@+id/image_paciente1"
            android:numStars="5" />

        <TextView
            android:id="@+id/txt_view_data_coments_paciente1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_view_nome_paciente1"
            android:layout_alignStart="@+id/txt_view_nome_paciente1"
            android:layout_below="@+id/txt_view_nome_paciente1"
            android:textSize="@dimen/half_text_size" />
    </RelativeLayout>

